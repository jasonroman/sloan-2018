{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="/css/flot.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}

    <div id="header">
        <h2>{{ title }}</h2>
    </div>

    <div id="content">

        <div id="left" class="demo-container" style="width: 375px; height: 450px;">
            <div id="placeholder-vertical" class="demo-placeholder"></div>
        </div>

        <div id="right" class="demo-container" style="width: 375px; height: 450px;">
            <div id="placeholder-horizontal" class="demo-placeholder"></div>
        </div>

        <div class="clear"></div>

        {{ include('stats/forms.html.twig') }}
    </div>

{% endblock %}

{% block javascriptData %}
    <script>
        // overwrite these with desired min/max bounds for the chart
        var minValue = 0;
        var maxValue = 100;

        // overwrite these with data retrieved from the api
        var dataVertical   = [];
        var dataHorizontal = [];
    </script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="/js/vendor/jquery.min.js" type="text/javascript"></script>
    <script src="/js/vendor/jquery.flot.js" type="text/javascript"></script>
    <script src="/js/vendor/jquery.flot.barnumbers.enhanced.js" type="text/javascript"></script>
    <script src="/js/vendor/jquery.flot.time.js" type="text/javascript"></script>

    <script src="/js/form.js" type="text/javascript"></script>
{% endblock %}